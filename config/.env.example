# ============================================
# AetherPay Oracle 环境配置
# ============================================

# 法币汇率API密钥（必需其中一个）
# --------------------------------------------
# 1. ExchangeRate-API (推荐，免费1500次/月)
#    注册地址: https://app.exchangerate-api.com/sign-up
EXCHANGERATE_API_KEY=

# 2. Open Exchange Rates (备选，免费1000次/月)
#    注册地址: https://openexchangerates.org/signup/free
OPENEXCHANGE_API_KEY=

# 3. Fixer.io (可选，需付费)
#    注册地址: https://fixer.io/
FIXER_API_KEY=

# 加密货币API密钥（可选，公开API通常不需要）
# --------------------------------------------
# Binance API (可选，提高限额)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Coinbase API (可选)
COINBASE_API_KEY=
COINBASE_API_SECRET=

# OKX API (可选)
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# CoinGecko API (可选，付费版限额更高)
COINGECKO_API_KEY=

# 区块链配置
# --------------------------------------------
# RPC节点（Optimism Sepolia测试网）
ETHEREUM_RPC_URL=https://sepolia.optimism.io

# 部署账户私钥（请妥善保管！）
PRIVATE_KEY=

# 合约地址（部署后填写）
CONTRACT_ADDRESS=
ORACLE_CONTRACT_ADDRESS=
PAYMENT_GATEWAY_ADDRESS=
FXPOOL_FACTORY_ADDRESS=

# Oracle服务配置
# --------------------------------------------
# 服务器端口
PORT=3001

# Redis配置（用于缓存）
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 数据库配置
# --------------------------------------------
# SQLite数据库路径
DB_PATH=./aether_oracle.db

# PostgreSQL（可选，生产环境）
# POSTGRES_URL=postgresql://user:password@localhost:5432/aether_oracle

# API服务配置
# --------------------------------------------
# CORS允许的域名
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API密钥（用于保护API端点）
API_SECRET_KEY=

# 日志配置
# --------------------------------------------
# 日志级别: debug, info, warn, error
LOG_LEVEL=info

# 日志文件路径
LOG_FILE=./oracle.log

# AI模型配置
# --------------------------------------------
# 模型目录
MODEL_DIR=./saved_models

# 预测置信度阈值
CONFIDENCE_THRESHOLD=0.95

# 数据采集配置
# --------------------------------------------
# 采集间隔（秒）
COLLECTION_INTERVAL=30

# 数据保留天数
DATA_RETENTION_DAYS=30

# 公共物品基金配置
# --------------------------------------------
# 默认捐赠比例（基点，10000 = 100%）
DEFAULT_DONATION_RATE=20  # 0.2%

# 最小捐赠金额（USDT）
MIN_DONATION_AMOUNT=0.01

# 网络配置
# --------------------------------------------
# 链ID
CHAIN_ID=11155420  # Optimism Sepolia

# Gas价格倍数
GAS_PRICE_MULTIPLIER=1.2

# 监控配置
# --------------------------------------------
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=60

# 告警邮箱（可选）
ALERT_EMAIL=

# Telegram告警（可选）
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=